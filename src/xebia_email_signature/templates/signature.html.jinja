<!DOCTYPE html
  PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">

<body style="font-size: 11pt; font-family: Arial, sans-serif; ">
  <table summary="contact details" style="width: 100%;">
    <tr>
      <td style="padding-right: 10px; width: 75px;">
        <a href="https://xebia.com/" title="Website" style="text-decoration: none;">
          <span style="text-decoration: none;">
            <img width="75" height="70" alt="Xebia logo bulb"
              src="{{ url_for('static', _external=True, _scheme=data['scheme'], filename='xebia-bulb.png') }}" />
          </span>
        </a>
      </td>
      <td style="
        vertical-align: top;
        border-left: 1px solid #6c1d5f;
        padding-left: 12px;
      ">
        <table style="border-collapse: collapse; width: 100%;">
          <tr style="
              line-height: 1; 
              vertical-align: baseline;
            ">
            <td style="
                padding: 0 0 2px;
              ">
              <table style="border-collapse: collapse;">
                <tr style="line-height: 1">
                  <td>
                    <p class="MsoNormal" style="
                      font-family: Arial;
                      font-size: 12pt;
                      font-style: normal;
                      font-weight: 700;
                      line-height: 14pt;
                      text-decoration: none;
                      color: #6c1d5f;
                      margin: 0.1px;
                    ">
                      {{ data['full_name'] | e }}
                    </p>
                  </td>
                  {% if 'social_media' in data and data['social_media'] %}
                  <td style="color: #dddddd; font-size: 10pt; font-weight: 200; padding: 0 4px 2px;">
                    |
                  </td>
                  {% for media in data['social_media'] %}
                  {% if media and media['icon'] and media['link'] %}
                  <td style="
                      padding: 0 2px 2px 0;
                    ">
                    <p style="text-decoration: none; margin: 0.1px; line-height: 13pt">
                      <a href="{{ media['link'] }}" style="text-decoration: none; ">
                        {% if media['icon'] == 'linkedin' %}
                        <img width="18" height="18"
                          src="{{ url_for('static', _external=True, _scheme=data['scheme'], filename='email-logo-li.png') }}" />
                        {% endif %}
                        {% if media['icon'] == 'x' %}
                        <img width="18" height="18"
                          src="{{ url_for('static', _external=True, _scheme=data['scheme'], filename='email-logo-x.png') }}" />
                        {% endif %}
                      </a>
                    </p>
                  </td>
                  {% endif %}
                  {% endfor %}
                  {% endif %}
                </tr>
              </table>
            </td>
          </tr>
          <tr style="line-height: 1">
            <td style="
                padding-top: 0;
                padding-bottom: 2px;
              ">
              <p style="
                  color: #5a5a5a;
                  font-family: Arial;
                  font-size: 10pt;
                  font-weight: 700;
                  line-height: 12pt;
                  font-style: normal;
                  margin: 0.1px;
                ">
                {{ data["job_role"] | e }}
              </p>
            </td>
          </tr>
          {% if 'unit' in data and data['unit'] %}
          <tr style="line-height: 1">
            <td style="
                padding-top: 0;
                padding-bottom: 2px;
              ">
              <p style="
                  color: #5a5a5a;
                  font-family: Arial;
                  font-size: 10pt;
                  line-height: 12pt;
                  font-style: normal;
                  margin: 0.1px;
                ">
                {{ data["unit"] | e }}
              </p>
            </td>
          </tr>
          {% endif %}
          {% if 'formatted_phone' in data and data['formatted_phone'] %}
          <tr style="line-height: 1">
            <td style="
                padding-top: 0;
                padding-bottom: 2px;
              ">
              <p style="
                  color: #5a5a5a;
                  font-family: Arial;
                  font-size: 10pt;
                  line-height: 12pt;
                  font-style: normal;
                  margin: 0.1px;
                ">
                <a style="color: #5a5a5a;" href="callto:{{ data["formatted_phone"] | e}}">{{ data["formatted_phone"] | e}}</a>
              </p>
            </td>
          </tr>
          {% endif %}
          <tr style="line-height: 1">
            <td style="
                padding-top: 4px;
                padding-bottom: 2px;
              ">

              <p style="
                  color: #6c1d5f;
                  font-family: Arial;
                  font-size: 9pt;
                  line-height: 11pt;
                  font-style: normal;
                  font-weight: 400;
                  margin: 0.1px;
                ">
                Find Xebia on:
              </p>
            </td>
          </tr>
          <tr style="line-height: 1">
            <td style="
                padding: 0 0 5px;
              ">
              <table style="border-collapse: collapse;">
                <tr style="line-height: 1">
                  <td>
                    <p style="
                      font-size: 9pt;
                      line-height: 11pt;
                      text-decoration: none;
                      margin:0;
                    ">
                      <a href="https://xebia.com/" title="Website" style="text-decoration: none;">
                        <img border="0" width="18" height="18" id="Website"
                          src="{{ url_for('static', _external=True, _scheme=data['scheme'], filename='email-logo-web.png') }}"
                          alt="Website" name="Website" />
                      </a>
                    </p>
                  </td>
                  <td>
                    <p style="
                      font-size: 9pt;
                      line-height: 11pt;
                      text-decoration: none;
                      margin:0;
                    ">
                      <a href="https://www.linkedin.com/company/xebia" title="Linkedin" style="text-decoration: none;">
                        <img border="0" width="18" height="18" id="Linkedin"
                          src="{{ url_for('static', _external=True, _scheme=data['scheme'], filename='email-logo-li.png') }}"
                          alt="Linkedin" name="Linkedin" />
                      </a>
                    </p>
                  </td>
                  <td>
                    <p style="
                      font-size: 9pt;
                      line-height: 11pt;
                      text-decoration: none;
                      margin:0;
                    ">
                      <a href="https://x.com/xebia" title="X" style="text-decoration: none;">
                        <img border="0" width="18" height="18" id="X"
                          src="{{ url_for('static', _external=True, _scheme=data['scheme'], filename='email-logo-x.png') }}"
                          alt="X" name="X" />
                      </a>
                    </p>
                  </td>
                  <td>
                    <p style="
                      font-size: 9pt;
                      line-height: 11pt;
                      text-decoration: none;
                      margin:0;
                    ">
                      <a href="https://www.youtube.com/@XebiaNL" title="YouTube" style="text-decoration: none;">
                        <img border="0" width="18" height="18" id="YouTube"
                          src="{{ url_for('static', _external=True, _scheme=data['scheme'], filename='email-logo-yt.png') }}"
                          alt="YouTube" name="YouTube" />
                      </a>
                    </p>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
          {% for call in data['call_to_action'] %}
          {% if call and call['icon'] and call['desc'] and call['link'] %}
          <tr style="line-height: 1">
            <td style="
                padding-top: 0;
                padding-bottom: 1.25pt;
              ">
              <table style="border-collapse: collapse;">
                <tr>
                  <td style="line-height: 8pt;">
                    <p class="MsoNormal" style="
                      vertical-align: middle;
                      margin: 0;
                      line-height: 10pt;
                    ">
                      {% if call['icon'] == 'blog' %}
                      <img width="12" height="13" style="display: block; vertical-align: middle;"
                        src="{{ url_for('static', _external=True, _scheme=data['scheme'], filename='email-cta-icon-blog.png') }}" />
                      {% endif %}
                      {% if call['icon'] == 'meeting' %}
                      <img width="12" height="13" style="display: block; vertical-align: middle;"
                        src="{{ url_for('static', _external=True, _scheme=data['scheme'], filename='email-cta-icon-meeting.png') }}" />
                      {% endif %}
                      {% if call['icon'] == 'event' %}
                      <img width="12" height="13" style="display: block; vertical-align: middle;"
                        src="{{ url_for('static', _external=True, _scheme=data['scheme'], filename='email-cta-icon-event.png') }}" />
                      {% endif %}
                      {% if call['icon'] == 'award' %}
                      <img width="12" height="13" style="display: block; vertical-align: middle;"
                        src="{{ url_for('static', _external=True, _scheme=data['scheme'], filename='email-cta-icon-award.png') }}" />
                      {% endif %}
                    </p>
                  </td>
                  <td style="padding: 0 0 0 2px; line-height: 8pt;">
                    <p class="MsoNormal" style="
                      font-family: Arial;
                      font-size: 8pt;
                      font-style: normal;
                      font-weight: 400;
                      line-height: 10pt;
                      color: #5a5a5a;
                      vertical-align: middle;
                      margin: 0;
                    ">
                      <a href="{{call['link']}}" style="color: #5a5a5a;">
                        <span style="color: #5a5a5a; text-decoration: underline;">
                          {{call['desc']}}
                        </span>
                      </a>
                    </p>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
          {% endif %}
          {% endfor %}
        </table>
      </td>
    </tr>
  </table>
</body>

</html>
